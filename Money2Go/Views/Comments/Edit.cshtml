@model Money2Go.Models.Comment

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Comment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="commentId" />
            <div class="form-group">
                <label asp-for="project.ProjectName" class="control-label"></label>
                <input asp-for="project.ProjectName" class="form-control" disabled/>
                <span asp-validation-for="project.ProjectName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="theComment" class="control-label"></label>
                <input asp-for="theComment" class="form-control" />
                <span asp-validation-for="theComment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
